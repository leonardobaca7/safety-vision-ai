# Database Configuration
DATABASE_URL=postgresql://safety_user:safety_pass@localhost:5432/safety_db

# Video Source Configuration
VIDEO_SOURCE=0  # 0 para webcam, o path al archivo de video, o RTSP URL
# VIDEO_SOURCE=rtsp://admin:password@192.168.1.100:554/stream
# VIDEO_SOURCE=datasets/test_videos/construction_site.mp4

# Model Configuration
MODEL_PATH=models_assets/yolov8_helmet_vest_best.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# Safety Logic Configuration
VIOLATION_PERSIST_SECONDS=3.0
ALERT_COOLDOWN_SECONDS=10.0

# Output Configuration
ALERTS_OUTPUT_DIR=outputs/alerts
LOGS_OUTPUT_DIR=outputs/logs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Edge Computing (opcional)
USE_ONNX_MODEL=false
ONNX_MODEL_PATH=models_assets/yolov8_optimized.onnx

# Debug Mode
DEBUG=true
SHOW_VISUALIZATION=true
